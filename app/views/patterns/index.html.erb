<p id="notice"><%= notice %></p>

<h1>Listing Patterns</h1>

<table>
  <thead>
    <tr>
      <th>Station name</th>
      <th>Time</th>
      <th>Temperature</th>
      <th>Dew point</th>
      <th>Wind direction</th>
      <th>Wind speed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patterns.each do |pattern| %>
      <tr>
        <td><%= pattern.station_name %></td>
        <td><%= pattern.time %></td>
        <td><%= pattern.temperature %></td>
        <td><%= pattern.dew_point %></td>
        <td><%= pattern.wind_direction %></td>
        <td><%= pattern.wind_speed %></td>
        <td><%= link_to 'Show', pattern %></td>
        <td><%= link_to 'Edit', edit_pattern_path(pattern) %></td>
        <td><%= link_to 'Destroy', pattern, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

